{% extends "template.html.twig" %}

{% block title %}Prestation{% endblock %}

{% block body %}
   <div class="d-flex justify-content-center pt-5">
      <h2>Prestations</h2>
   </div>

   <div class="mt-3">

    
      <div class="row flex-column">
        <div class="col-3 align-self-center">
         <form method="POST" action="{{baseUrl}}/Prestations/Genre" class="form-inline my-2 my-lg-0 form-control-sm">
            <select class="custom-select" name="style">
               <option selected disabled>Categorie</option>
               <option value ="agent immobilier">agent immobilier</option>
               <option value ="coach formateur">coach formateur</option>
            </select>
            <button class="btn btn-dark my-2 my-sm-0" type="submit">Afficher</button>
         </form>
         </div>
      </div>
   </div>

  
   {% if slug is null %}
      <div class="d-flex justify-content-center flex-wrap">
         {% for prestations in prestations %}
            <div class="d-flex flex-column m-5 position-relative">
               <a href="{{baseUrl}}/Prestations/Prestation_{{prestations.id_prestation}}" class="shadow-drop-2-center">
               <img src="{{prestations.pecture}}" style="width:300px;height:400px;"></img>
               </a>
               <p class="text-center font-weight-bold" >{{prestations.name}}</p>
               <p class="text-center font-weight-bold" >Categorie : {{prestations.style}}</p>
            </div>
         {% endfor %}
      </div>
   
   {% elseif (slug == "Genre") %}
      <div class="d-flex justify-content-center flex-wrap">
         {% for style in style %}
            <div class="d-flex flex-column m-5 position-relative">
               <a href="{{baseUrl}}/Prestations/Prestation_{{style.id_prestation}}" class="shadow-drop-2-center">
               <img src="{{style.pecture}}" style="width:300px;height:400px;"></img>
               </a>
               <p class="text-center font-weight-bold" >{{style.entreprise}} : {{style.name}}</p>
              
            </div>
         {% endfor %}
      </div>

      <div class="d-flex justify-content-center pt-5">
         <p>{{notFound}}</p>
      </div>
   {% endif %}
{% endblock %}
