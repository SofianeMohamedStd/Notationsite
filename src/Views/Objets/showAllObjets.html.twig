{% extends "template.html.twig" %}

{% block title %}Objets{% endblock %}

{% block body %}
   <div class="d-flex justify-content-center pt-5">
      <h2>Objets</h2>
   </div>

   <div class="mt-3">

    
      <div class="row flex-column">
        <div class="col-3 align-self-center">
         <form method="POST" action="{{baseUrl}}/Objets/Genre" class="form-inline my-2 my-lg-0 form-control-sm">
            <select class="custom-select" name="style">
               <option selected disabled>Categorie</option>
               <option value ="voiture">voiture</option>
               <option value ="moto">moto</option>
               <option value ="scooter">scooter</option>
            </select>
            <button class="btn btn-dark my-2 my-sm-0" type="submit">Go</button>
         </form>
         </div>
      </div>
   </div>

  
   {% if slug is null %}
      <div class="d-flex justify-content-center flex-wrap">
         {% for objets in objets %}
            <div class="d-flex flex-column m-5 position-relative">
               <a href="{{baseUrl}}/Objets/Objet_{{objets.id_objet}}" class="shadow-drop-2-center">
               <img src="{{objets.picture}}" style="width:300px;height:400px;"></img>
               </a>
               <p class="text-in-image m-0 pb-3 px-0 pt-3 text-center font-weight-bold" >{{objets.marque}}</p>
               <p class="text-in-image m-0 pb-3 px-0 pt-3 text-center font-weight-bold" >Categorie : {{objets.style}}</p>
            </div>
         {% endfor %}
      </div>
   
   {% elseif (slug == "Genre") %}
      <div class="d-flex justify-content-center flex-wrap">
         {% for style in style %}
            <div class="d-flex flex-column m-5 position-relative">
               <a href="{{baseUrl}}/Objets/Objet_{{style.id_objet}}" class="shadow-drop-2-center">
               <img src="{{style.picture}}" style="width:300px;height:400px;"></img>
               </a>
               <p class="text-in-image m-0 pb-3 px-0 pt-3 text-center font-weight-bold" >{{style.marque}} : {{style.name}}</p>
              
            </div>
         {% endfor %}
      </div>

      <div class="d-flex justify-content-center pt-5">
         <p>{{notFound}}</p>
      </div>
   {% endif %}
{% endblock %}
